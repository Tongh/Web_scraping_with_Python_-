      <h1 id="section_0">
       Kevin Bacon
      </h1>
      <div class="tagline">
      </div>
     </div>
     <div class="content" id="bodyContent">
      <div class="mw-content-ltr" dir="ltr" id="mw-content-text" lang="en">
       <script>
        function mfTempOpenSection(id){var block=document.getElementById("mf-section-"+id);block.className+=" open-block";block.previousSibling.className+=" open-block";}
       </script>
       <div class="mw-parser-output">
        <div class="mf-section-0" id="mf-section-0">
         <div class="hatnote navigation-not-searchable" role="note">
          For other uses, see
          <a class="mw-disambig" href="/wiki/Kevin_Bacon_(disambiguation)" title="Kevin Bacon (disambiguation)">
           Kevin Bacon (disambiguation)
          </a>
          .
         </div>
         <p class="mw-empty-elt">
         </p>
         <table class="infobox biography vcard" style="width:22em">
